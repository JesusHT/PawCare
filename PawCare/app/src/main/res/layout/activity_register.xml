<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginHorizontal="25dp"
        android:src="@drawable/flecha_regreso"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/gato"
        android:layout_width="165dp"
        android:layout_height="108dp"
        android:layout_marginHorizontal="292dp"
        android:layout_marginTop="121dp"
        android:src="@drawable/deco_gato" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#1D5D9B"
        android:layout_marginTop="125dp"
        android:textAlignment="center"
        android:id="@+id/register" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Crea una cuenta nueva!"
        android:textSize="24dp"
        android:layout_below="@id/register"
        android:textStyle="bold"
        android:textColor="#CEE8FA"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:id="@+id/sub" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sub"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="#1A9108" />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/sub"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/us_er"
        android:drawablePadding="17dp"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:textColorHint="#1D5D9B"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/name"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/email_password"
        android:drawablePadding="8dp"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:textColorHint="#1D5D9B"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/email"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/candado"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="24dp"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#1D5D9B"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp" />

    <EditText
        android:id="@+id/confirm_passwd"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/password"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/candado"
        android:hint="Confirma tú contraseña"
        android:inputType="textPassword"
        android:paddingLeft="24dp"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#1D5D9B"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp" />

    <LinearLayout
        android:id="@+id/content_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_passwd"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="end">

        <CheckBox
            android:id="@+id/showPasswordCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mostrar contraseña"
            android:textColor="#1D5D9A"
            android:textStyle="bold"
            android:layoutDirection="rtl"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/terms_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_passwd"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <CheckBox
            android:id="@+id/terms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto los "
            android:textColor="#316DA5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/terms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones"
            android:textColor="#316DA5"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/terms_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1D5D9A"
        android:text="Registrarse"
        android:textStyle="bold" />

</RelativeLayout>
